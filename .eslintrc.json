{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": "off",
        "no-undef": "off",
        "func-names": "off",
        "no-use-before-define": "off",
        "prefer-template": "off",
        "no-useless-escape": "off",
        "prefer-promise-reject-errors": "off",
        "object-property-newline": "off",
        "object-curly-newline": "off"
    }
}